{
    "name": "TimerPiece",
    "description": "A Piece that controls events starting and stopping, for a given duration.",
    "type": "include_block",
    "dependency": {
        "requirements_file": "requirements00.txt"
    },
    "tags": [
        "default",
        "timer"
    ],
    "style": {
        "node_label": "Timer",
        "icon_class_name": "fa-solid:stopwatch"
    },
    "user_input": {
        "duration_seconds": {
            "type": "number",
            "description": "Duration in seconds for the timer.",
            "default": 10
        }
    },
    "events": {
        "on_start": {
            "description": "Triggered when the timer starts."
        },
        "on_complete": {
            "description": "Triggered when the timer completes."
        }
    }
}
