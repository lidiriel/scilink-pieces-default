{
    "name": "PinchValvePiece",
    "description": "Executes pinch valve command.",
    "brand": "default",
    "model": "PinchValve",
    "type": "device",
    "tags": [
        "hardware",
        "actuator",
        "fluidics"
   	],
    "style": {
        "node_label": "Pinch Valve",
        "icon_class_name": "fa-solid:fa-tint"
    },
    "device_settings": {
        "device_id": {
            "type": "string",
            "description": "The unique identifier for the pinch valve device.",
            "default": "PinchValve-%n",
            "replace_node_label": true          
        },
        "coils_1": {
                "type": "boolean",
                "description": "If true, the pinch valve is activated.",
                "default": false
        },
        "dependency": {
            "type": "device",
            "tag": "relay",
            "description": "The relay device this pinch valve is connected to.",
            "matches": {
                "user_inputs": ["coils_1"]    
            }
        }
    },
    "user_inputs": {
        "position": {
            "type": "enumeration",
            "description": "The position to move the pinch valve to.",
            "options": [
                "OPEN",
                "CLOSED"
            ],
            "default": "CLOSED",
            "visible": true
        }
    }   
}